<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.foodie_finds.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_home_to_create_post"
            app:destination="@id/navigation_create_post"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_posts"
        android:name="com.example.foodie_finds.ui.home.PostsFragment"
        android:label="Posts Fragment"
        tools:layout="@layout/posts_fragment">
    </fragment>
    <fragment
        android:id="@+id/navigation_create_post"
        android:name="com.example.foodie_finds.ui.home.CreatePostFragment"
        android:label="CreatePostFragment" >
        <argument
            android:name="post"
            app:argType="com.example.foodie_find.data.post.Post" />
        <action
            android:id="@+id/action_create_post_to_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.foodie_finds.ui.profile.ProfileFragment"
        android:label="Posts Fragment"
        tools:layout="@layout/profile_fragment">
        <action
            android:id="@+id/action_profile_to_edit_profile"
            app:destination="@id/navigation_edit_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.foodie_finds.ui.profile.EditProfileFragment"
        android:label="edit my profile"
        tools:layout="@layout/edit_profile_fragment">
        <action
            android:id="@+id/action_edit_profile_to_profile"
            app:destination="@id/navigation_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>